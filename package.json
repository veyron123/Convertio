{
  "name": "convertio-backend",
  "version": "1.0.0",
  "description": "Backend server for Convertio API",
  "main": "server.js",
  "scripts": {
    "start": "node simple_server.js",
    "dev": "nodemon simple_server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "old-start": "node server.js",
    "serve:public": "npx serve -s public -l 3001",
    "restart": "npm run dev"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "busboy": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.4",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "axios-mock-adapter": "^1.22.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "serve": "^14.2.4",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!coverage/**",
      "!server.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
